{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Ensure Local Runtime is Running",
			"detail": "Checks if Local Runtime is up and starts it if needed",
			"type": "shell",
			"command": "bash -c 'if curl -s http://localhost:50050 > /dev/null 2>&1 && nc -z localhost 1883 2>/dev/null; then echo \"✓ Local Runtime is already running and ready\"; exit 0; fi; echo \"Local Runtime not detected, starting it now...\"; velocitas exec runtime-local up; cd ${workspaceFolder}/dndatamodel-simulator && docker-compose up -d; echo \"Waiting for services to be ready...\"; for i in {1..30}; do if curl -s http://localhost:50050 > /dev/null 2>&1 && nc -z localhost 1883 2>/dev/null; then echo \"✓ Runtime and MQTT broker are ready\"; exit 0; fi; echo \"  Waiting... ($i/30)\"; sleep 1; done; echo \"⚠ Warning: Services may not be fully ready\"; exit 1'",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": [ ]
		},
		{
			"label": "Local Runtime - Up",
			"detail": "Starts up the local runtime and simulator",
			"dependsOn": [
				"Local Runtime - Up (core)",
				"Start DnDataModel Simulator"
			],
			"problemMatcher": [ ]
		},
		{
			"label": "Local Runtime - Up (core)",
			"detail": "Starts up the local runtime",
			"type": "shell",
			"command": "velocitas exec runtime-local up",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": [ ]
		},
		{
			"label": "Start DnDataModel Simulator",
			"detail": "Starts the DnDataModel simulator with web UI",
			"type": "shell",
			"command": "cd ${workspaceFolder}/dndatamodel-simulator && docker-compose up -d && echo 'Simulator started at http://localhost:8081'",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": [ ]
		},
		{
			"label": "Local Runtime - Down",
			"detail": "Stops the local runtime and simulator",
			"dependsOn": [
				"Local Runtime - Down (core)",
				"Stop DnDataModel Simulator"
			],
			"problemMatcher": [ ]
		},
		{
			"label": "Local Runtime - Down (core)",
			"detail": "Stops the local runtime",
			"type": "shell",
			"command": "velocitas exec runtime-local down",
			"group": "none",
			"presentation": {
				"panel": "dedicated",
				"clear": true,
			},
			"problemMatcher": [ ]
		},
		{
			"label": "Stop DnDataModel Simulator",
			"detail": "Stops the DnDataModel simulator",
			"type": "shell",
			"command": "cd ${workspaceFolder}/dndatamodel-simulator && docker-compose down",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": [ ]
		},
		{
			"label": "Local Runtime - Run VehicleApp",
			"detail": "Starts the VehicleApp under development",
			"type": "shell",
			"command": [
				"velocitas exec runtime-local run-vehicle-app ${workspaceFolder}/build/bin/app"
			],
			"presentation": {
				"close": true,
				"reveal": "always"
			},
			"problemMatcher": [ ]
		},
		{
			"label": "Local Runtime - VehicleDataBroker CLI",
			"detail": "Starts the VehicleDataBroker CLI",
			"type": "shell",
			"command": "velocitas exec runtime-local run-vehicledatabroker-cli",
			"group": "none",
			"isBackground": false,
			"problemMatcher": [ ]
		},
		{
			"label": "Pre Commit Action",
			"detail": "Perform checking/formating of the code",
			"type": "shell",
			"command": "pre-commit run --show-diff-on-failure --color=always --all-files",
			"group": "none",
			"isBackground": false,
			"problemMatcher": [ ]
		},
		{
			"label": "Kanto Runtime - Up",
			"detail": "Starts up the Kanto runtime.",
			"type": "shell",
			"command": "velocitas exec runtime-kanto up",
			"group": "none",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"clear": true,
				"close": false
			},
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Hint:",
					"endsPattern": "^✅ Kanto is ready to use!.*"
				}
			}
		},
		{
			"label": "Kanto Runtime - Down",
			"detail": "Stops the Kanto runtime",
			"type": "shell",
			"command": "velocitas exec runtime-kanto down",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"clear": true,
				"close": false
			},
			"problemMatcher": [ ]
		},
		{
			"label": "Kanto Runtime - Build VehicleApp",
			"detail": "Builds the VehicleApp.",
			"type": "shell",
			"command": "velocitas exec deployment-kanto build-vehicleapp",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true,
				"close": false
			},
			"problemMatcher": [ ]
		},
		{
			"label": "Kanto Runtime - Deploy VehicleApp",
			"detail": "Builds and deploys the VehicleApp via Kanto-cm",
			"type": "shell",
			"command": "velocitas exec deployment-kanto deploy-vehicleapp",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true,
				"close": false
			},
			"dependsOn": [
				"Kanto Runtime - Up",
				"Kanto Runtime - Build VehicleApp"
			],
			"problemMatcher": [ ]
		},
		{
			"label": "Kanto Runtime - Deploy VehicleApp (without rebuild)",
			"detail": "Deploys the VehicleApp via Kanto-cm (without rebuilding it)",
			"type": "shell",
			"command": "velocitas exec deployment-kanto deploy-vehicleapp",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true,
				"close": false
			},
			"dependsOn": [
				"Kanto Runtime - Up"
			],
			"problemMatcher": [ ]
		},
		{
			"label": "(Re-)generate vehicle model",
			"detail": "(Re-)generates the vehicle model from source files specified in the AppManifest.",
			"type": "shell",
			"command": "velocitas exec vehicle-signal-interface download-vspec && velocitas exec vehicle-signal-interface generate-model",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true,
				"close": false
			},
			"problemMatcher": [ ]
		},
		{
			"label": "(Re-)generate gRPC SDKs",
			"detail": "(Re-)generates all auto-generated gRPC SDKs used by the app",
			"type": "shell",
			"command": "velocitas exec grpc-interface-support generate-sdk",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true,
				"close": false
			},
			"problemMatcher": [ ]
		}
	],
	"inputs": [
		{
			"description": "Options for example apps from SDK package.",
			"id": "exampleApp",
			"type": "pickString",
			"options": [
				"seat-adjuster"
			],
		}
	]
}
