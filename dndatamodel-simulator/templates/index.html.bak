<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DnDataModel Simulator</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }

        .header h1 {
            color: #667eea;
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        .header p {
            color: #666;
            font-size: 1.1em;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .card h2 {
            color: #667eea;
            margin-bottom: 15px;
            font-size: 1.5em;
        }

        .status-indicator {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .status-running {
            background-color: #4CAF50;
        }

        .status-paused {
            background-color: #FF9800;
        }

        .status-stopped {
            background-color: #f44336;
        }

        .stat-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }

        .stat-row:last-child {
            border-bottom: none;
        }

        .stat-label {
            color: #666;
            font-weight: 500;
        }

        .stat-value {
            color: #333;
            font-weight: bold;
        }

        .speed-display {
            font-size: 4em;
            font-weight: bold;
            color: #667eea;
            text-align: center;
            margin: 20px 0;
        }

        .speed-unit {
            font-size: 0.4em;
            color: #999;
        }

        .controls {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 15px;
        }

        button {
            flex: 1;
            min-width: 120px;
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-start {
            background-color: #4CAF50;
            color: white;
        }

        .btn-stop {
            background-color: #f44336;
            color: white;
        }

        .btn-pause {
            background-color: #FF9800;
            color: white;
        }

        .btn-resume {
            background-color: #2196F3;
            color: white;
        }

        input[type="number"],
        input[type="range"] {
            width: 100%;
            padding: 10px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 1em;
            margin-top: 10px;
        }

        input[type="range"] {
            padding: 0;
        }

        label {
            display: block;
            color: #666;
            font-weight: 500;
            margin-top: 15px;
        }

        .log-area {
            background: #f5f5f5;
            padding: 15px;
            border-radius: 8px;
            max-height: 300px;
            overflow-y: auto;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
            margin-top: 15px;
        }

        .log-entry {
            padding: 5px 0;
            border-bottom: 1px solid #ddd;
        }

        .timestamp {
            color: #999;
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }

        .updating {
            animation: pulse 1s infinite;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>üöó DnDataModel Simulator</h1>
            <p>Real-time vehicle signal generation based on custom data model</p>
        </div>

        <div class="grid">
            <div class="card">
                <h2>Status</h2>
                <div class="stat-row">
                    <span class="stat-label">State:</span>
                    <span class="stat-value">
                        <span class="status-indicator" id="status-indicator"></span>
                        <span id="status-text">Stopped</span>
                    </span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">Updates Sent:</span>
                    <span class="stat-value" id="update-count">0</span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">Errors:</span>
                    <span class="stat-value" id="error-count">0</span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">Last Update:</span>
                    <span class="stat-value" id="last-update">Never</span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">Interval:</span>
                    <span class="stat-value"><span id="interval-display">2.0</span>s</span>
                </div>
            </div>

            <div class="card">
                <h2>Current Speed</h2>
                <div class="speed-display" id="speed-display">
                    0.0 <span class="speed-unit">km/h</span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">Signal Path:</span>
                </div>
                <div style="font-size: 0.85em; color: #666; margin-top: 5px;">
                    dndatamodel/Vehicle/EgoVehicle/Motion/Locomotion/Speed
                </div>
            </div>
        </div>

        <div class="card">
            <h2>Controls</h2>
            <div class="controls">
                <button class="btn-start" onclick="startSimulator()">‚ñ∂Ô∏è Start</button>
                <button class="btn-pause" onclick="pauseSimulator()">‚è∏Ô∏è Pause</button>
                <button class="btn-resume" onclick="resumeSimulator()">‚ñ∂Ô∏è Resume</button>
                <button class="btn-stop" onclick="stopSimulator()">‚èπÔ∏è Stop</button>
            </div>

            <label for="interval-input">Update Interval (seconds):</label>
            <input type="range" id="interval-input" min="0.5" max="10" step="0.5" value="2.0"
                oninput="updateInterval(this.value)">
            <div style="text-align: center; margin-top: 5px; color: #666;">
                <span id="interval-value">2.0</span> seconds
            </div>

            <label for="manual-speed">Manual Speed Control (km/h):</label>
            <input type="number" id="manual-speed" min="0" max="120" step="0.1" placeholder="Enter speed">
            <button class="btn-resume" style="width: 100%; margin-top: 10px;" onclick="setManualSpeed()">
                Set Speed
            </button>
        </div>

        <div class="card">
            <h2>Activity Log</h2>
            <div class="log-area" id="log-area">
                <div class="log-entry">Waiting for simulator to start...</div>
            </div>
        </div>
    </div>

    <script>
        let updateIntervalId = null;

        function addLog(message) {
            const logArea = document.getElementById('log-area');
            const timestamp = new Date().toLocaleTimeString();
            const entry = document.createElement('div');
            entry.className = 'log-entry';
            entry.innerHTML = `<span class="timestamp">[${timestamp}]</span> ${message}`;
            logArea.insertBefore(entry, logArea.firstChild);

            // Keep only last 50 entries
            while (logArea.children.length > 50) {
                logArea.removeChild(logArea.lastChild);
            }
        }

        async function updateStatus() {
            try {
                const response = await fetch('/api/status');
                const data = await response.json();

                // Update status indicator
                const indicator = document.getElementById('status-indicator');
                const statusText = document.getElementById('status-text');

                if (data.running && !data.paused) {
                    indicator.className = 'status-indicator status-running';
                    statusText.textContent = 'Running';
                } else if (data.paused) {
                    indicator.className = 'status-indicator status-paused';
                    statusText.textContent = 'Paused';
                } else {
                    indicator.className = 'status-indicator status-stopped';
                    statusText.textContent = 'Stopped';
                }

                // Update stats
                document.getElementById('update-count').textContent = data.update_count;
                document.getElementById('error-count').textContent = data.error_count;
                document.getElementById('last-update').textContent = data.last_update_time || 'Never';
                document.getElementById('interval-display').textContent = data.interval.toFixed(1);

                // Update speed display
                const speedDisplay = document.getElementById('speed-display');
                speedDisplay.innerHTML = `${data.current_speed.toFixed(1)} <span class="speed-unit">km/h</span>`;

                // Add pulse effect when updating
                if (data.running && !data.paused) {
                    speedDisplay.classList.add('updating');
                } else {
                    speedDisplay.classList.remove('updating');
                }

            } catch (error) {
                console.error('Error fetching status:', error);
            }
        }

        async function startSimulator() {
            try {
                await fetch('/api/start', { method: 'POST' });
                addLog('‚úÖ Simulator started');
            } catch (error) {
                addLog('‚ùå Error starting simulator: ' + error.message);
            }
        }

        async function stopSimulator() {
            try {
                await fetch('/api/stop', { method: 'POST' });
                addLog('üõë Simulator stopped');
            } catch (error) {
                addLog('‚ùå Error stopping simulator: ' + error.message);
            }
        }

        async function pauseSimulator() {
            try {
                await fetch('/api/pause', { method: 'POST' });
                addLog('‚è∏Ô∏è Simulator paused');
            } catch (error) {
                addLog('‚ùå Error pausing simulator: ' + error.message);
            }
        }

        async function resumeSimulator() {
            try {
                await fetch('/api/resume', { method: 'POST' });
                addLog('‚ñ∂Ô∏è Simulator resumed');
            } catch (error) {
                addLog('‚ùå Error resuming simulator: ' + error.message);
            }
        }

        async function updateInterval(value) {
            document.getElementById('interval-value').textContent = parseFloat(value).toFixed(1);
            try {
                await fetch('/api/interval', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ interval: parseFloat(value) })
                });
                addLog(`‚è±Ô∏è Interval set to ${parseFloat(value).toFixed(1)}s`);
            } catch (error) {
                addLog('‚ùå Error setting interval: ' + error.message);
            }
        }

        async function setManualSpeed() {
            const speed = parseFloat(document.getElementById('manual-speed').value);
            if (isNaN(speed) || speed < 0 || speed > 120) {
                addLog('‚ùå Invalid speed value');
                return;
            }

            try {
                await fetch('/api/speed', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ speed: speed })
                });
                addLog(`üéØ Manual speed set to ${speed.toFixed(1)} km/h`);
            } catch (error) {
                addLog('‚ùå Error setting speed: ' + error.message);
            }
        }

        // Update status every 500ms
        updateIntervalId = setInterval(updateStatus, 500);

        // Initial update
        updateStatus();
        addLog('üåê Web UI loaded');
    </script>
</body>

</html>